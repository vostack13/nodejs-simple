extends ../layouts/main_layout.pug

block link
  -var selected = 'Мои работы';

block title
  title Мои работы

block content
  section.aboutbox
    .aboutbox-header Мои работы
    .aboutbox-body.clearfix
      .projects-wrapper
        ul.projects-list
          each item in items
            li.projects-item
              .hover-img
                img.project-img(src=`${item.picture}`, alt=`${item.link}`)
                .zoom-wrapper
                  a.zoom-link(href=`http://${item.link}`, target="_blank")=  item.name
              a.project-link(href=`http://${item.link}`, target="_blank")= item.link
              .project-desc= item.desc
          //- Добавить проект
          if auth
            li.projects-item.add-new-item
              a.add-new-link#add-new-item(href="#")
                .add-new-text Добавить проект

  include ../common/popup.pug