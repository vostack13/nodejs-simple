<!DOCTYPE html>
<html>

<head>
  <title>HBS compilation demo</title>
  <style>
    h1 {
      color: #9b9bb4;
    }
  </style>
</head>

<body>
  <h1>Handlebars Template Engine</h1>
  <ul>
    {{#each f.users}}
    <li class="{{this.species}}">{{@index}}: {{this.name}}</li>
    {{else}}
    <li>Список пуст</li>
    {{/each}}
  </ul>
  {{#bold f.story}}
  <div>{{intro}}</div>
  {{/bold}}

  <div id="particles">
    {{link 'Vegetables' href='/veggies' class='test'}}
  </div>

  <ul class="user-info">
    {{#each f.people}} {{> user this}} {{/each}}
  </ul>

  <hr> {{> (whichPartial condition="block") }}
  <hr>
</body>

</html>